
<div class="card" data-accommodation-id="{{ accommodation.id }}">
    <div class="image-gallery">
        <div class="carousel" id="carousel-{{ accommodation.id }}">
            {% for picture in accommodation.pictures %}
                <img class="carousel-item" src="{{ asset(picture.imageURL)  }}" alt="Image de l'hébergement"
                     style="display: {% if loop.first %}block{% else %}none{% endif %};">
            {% endfor %}

        </div>
        <button class="prev" onclick="plusSlides({{ accommodation.id }}, -1)">&#10094;</button>
        <button class="next" onclick="plusSlides({{ accommodation.id }}, 1)">&#10095;</button>
    </div>
    <h4>{{ accommodation.title }}</h4>
    <div class="position">
        <img class="locate" src="{{ asset('images/adresse.png') }}" alt="adresse">
        <div class="title-first">{{ accommodation.address }}, {{ accommodation.country.name }}</div>
    </div>
    <section class="details1">
        <div class="details1">
            <img class="picture1" src="{{ asset('images/traveler.png')  }}" alt="Nombre d'invités">
            <span>{{ accommodation.NbGuests }} invités</span>
        </div>
        <div class="details1">
            <img class="picture1" src="{{ asset('images/bed.png') }}" alt="Nombre de chambres">
            <span>{{ accommodation.NbRooms }} chambres</span>
        </div>
    </section>
    <p>{{ accommodation.description }}</p>
    <button class="price">{{ accommodation.priceNight }}€ / nuit</button>

    <div class="btn-crud">
        <a href="{{ path('app_accommodation_showDetails', {'id': accommodation.id}) }}"><img src="{{ asset('images/info.png') }}" alt="" class="btn-show"></a>
        {% if is_granted('ROLE_HOST') and accommodation.host.id == app.user.id or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_accommodation_update', {'id': accommodation.id}) }}" class="btn-edit"><img src="{{ asset('images/pen.png') }}" alt="" class="btn-edit"></a>
            <form action="{{ path('app_accommodation_remove', {'id': accommodation.id}) }}" method="post" class="form-delete">
                <input type="hidden" name="token" value="{{ csrf_token('delete-accommodation-' ~ accommodation.id) }}">
                <button type="submit" class="btn-delete" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ? Cette action est irréversible.')"><img src="{{ asset('images/delete.png') }}" alt="" class="btn-delete"></button>
            </form>
        {% endif %}
    </div>


</div>



