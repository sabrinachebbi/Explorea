{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/Admin/new.css') }}">
{% endblock %}

{% block body %}
    <div class="form-container">
        <h2>
            {% if user is defined %}
                {% if app.user == user %}
                    Modifier mon profil
                {% else %}
                    Modifier l'utilisateur
                {% endif %}
            {% else %}
                Ajouter un nouvel utilisateur
            {% endif %}
        </h2>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_widget(form) }}
        </div>
        <button class="btn">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}

        {% if app.user == user %}
            <a href="{{ path('host_dashboard') }}">Retour à mon profil</a>
        {% else %}
            <a href="{{ path('app_admin_user_list') }}">Retour à la liste des utilisateurs</a>
        {% endif %}
    </div>
{% endblock %}





