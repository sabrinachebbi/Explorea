{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/Admin/details.css') }}">
{% endblock %}

<div class="reservation-summary">
    <h1>Détails d'un utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.userProfile.firstName }}</td>
            </tr>
            <tr>
            <th>Prénom</th>
            <td>{{ user.userProfile.lastName }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ user.userProfile.country }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ user.userProfile.gender.value }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.userProfile.address}}</td>
            </tr>
            <tr>
                <th>Date Naissance</th>
                <td>{{ user.userProfile.dateBirth|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Téleohone</th>
                <td>{{ user.userProfile.phone}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_list') }}">Retour à la liste</a>


</div>
