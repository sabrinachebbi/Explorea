

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/Admin/details.css') }}">
{% endblock %}

{% block body %}
    <div class="reservation-summary">
        <h2>Détails de l'activité</h2>

        <div class="detail">
            <span>Titre :</span> {{ activity.title }}
        </div>
        <div class="detail">
            <span>Description :</span> {{ activity.description }}
        </div>
        <div class="detail">
            <span>Prix :</span> {{ activity.price }} €
        </div>
        <div class="detail">
            <span>Adresse :</span> {{ activity.address }}
        </div>
        <div class="detail">
            <span>Catégorie :</span> {{ activity.category.name }}
        </div>
        <div class="detail">
            <span>Durée :</span> {{ activity.duration }} jours
        </div>
        <div class="detail">
            <span>Ville :</span> {{ activity.city.name }}
        </div>
        <div class="detail">
            <span>Pays :</span> {{ activity.city.country.name }}
        </div>

        <a href="{{ path('app_admin_activity_list') }}" class="btn-back">Retour à la liste</a>
    </div>
{% endblock %}
