{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/Admin/details.css') }}">
{% endblock %}

<div class="reservation-summary">
    <h2>Détails d'activity</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ activity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ activity.price }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ activity.address }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ activity.category.name}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_activity_list') }}">Retour à la liste</a>


</div>
