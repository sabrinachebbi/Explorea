{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/Admin/showAll.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/notification-message.css') }}">
{% endblock %}
{% block importmap %}
    {{ importmap('pagination') }}
{% endblock %}
{% block body %}
    <!-- Message flash  -->

        <div class="flash-messages">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-message flash-{{ label }}">
                        <span>{{ message }}</span>
                        <button class="close-btn" onclick="this.parentElement.style.display='none';">&times;</button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    <div class="reservation-container">
        <h1>Liste des Réservations</h1>
        <p>Nombre total de réservations : <strong>{{ pagination.getTotalItemCount }}</strong></p>
        <table class="reservation-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Date de départ</th>
                <th>Total</th>
                <th>Nombre de voyageurs</th>
                <th>Date de retour</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reservation in pagination %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.departureDate ? reservation.departureDate|date('d/m/Y') : '' }}</td>
                    <td>{{ reservation.total }} €</td>
                    <td>{{ reservation.voyagerNb }}</td>
                    <td>{{ reservation.returnDate ? reservation.returnDate|date('d/m/Y') : '' }}</td>
                    <td class="actions">
                        <a href="{{ path('admin_reservation_show', {'id': reservation.id}) }}" class="btn-show">Afficher</a>
                        <a href="{{ path('admin_reservation_edit', {'id': reservation.id}) }}" class="btn-edit">Modifier</a>
                        <form method="post" action="{{ path('admin_reservation_delete', {'id': reservation.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                            <button type="submit" class="btn-delete">Supprimer</button>
                        </form>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <!-- Pagination -->
        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
