{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/Admin/showAll.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/pagination.css') }}">
{% endblock %}
<div class="reservation-container">
    <h1>Liste des Réservations</h1>
    <p>Nombre total de réservations : <strong>{{ pagination.getTotalItemCount }}</strong></p>

    <table class="reservation-table">
        <thead>
        <tr>
            <th class="id-column">ID</th>
            <th class="date-column">Date de départ</th>
            <th class="total-column">Total</th>
            <th class="voyager-column">Nombre de voyageurs</th>
            <th class="date-column">Date de retour</th>
            <th class="actions-column">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for reservation in pagination %}
            <tr>
                <td class="id-column" data-label="ID">{{ reservation.id }}</td>
                <td class="date-column" data-label="Date de départ">{{ reservation.departureDate ? reservation.departureDate|date('d/m/Y') : '' }}</td>
                <td class="total-column" data-label="Total">{{ reservation.total }} €</td>
                <td class="voyager-column" data-label="Nombre de voyageurs">{{ reservation.voyagerNb }}</td>
                <td class="date-column" data-label="Date de retour">{{ reservation.returnDate ? reservation.returnDate|date('d/m/Y') : '' }}</td>
                <td class="actions-column actions" data-label="Actions">
                    <a href="{{ path('admin_reservation_show', {'id': reservation.id}) }}" class="btn-show">Afficher</a>
                    <a href="{{ path('admin_reservation_edit', {'id': reservation.id}) }}" class="btn-edit">Modifier</a>
                    <form method="post" action="{{ path('admin_reservation_delete', {'id': reservation.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                        <button type="submit" class="btn-delete">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>


    <!-- Pagination -->
    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>

