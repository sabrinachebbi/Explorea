{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/cardAccomodation.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/cardActivity.css') }}">

{% endblock %}

{% block body %}
    {% if type == 'accommodation' or type is empty %}
        <h2>Logements disponibles</h2>
        {% if accommodations|length > 0 %}
            <div class="card-container">
                {% for accommodation in accommodations %}
                    <script src="{{ asset('js/carousel.js') }}"></script>
                    {% include '_partials/cardAccomodation.html.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <p>Aucun logement disponible pour cette destination.</p>
        {% endif %}
    {% endif %}

    {% if type == 'activity' or type is empty %}
        <h2>Activités disponibles</h2>
        {% if activities|length > 0 %}
            <div class="container_activity">
                {% for activity in activities %}
                        <script src="{{ asset('js/carousel.js') }}"></script>
                        {% include '_partials/cardActivity.html.twig'  %}
                    </div>
                {% endfor %}
        {% else %}
            <p>Aucune activité disponible pour cette destination.</p>
        {% endif %}
    {% endif %}
{% endblock %}

