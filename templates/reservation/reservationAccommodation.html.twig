{% block meta_description %}
    <meta name="description" content=" Réservez un hébergement unique pour votre séjour grâce à Exploréa. Découvrez des hôtels, maisons, ou appartements adaptés à vos besoins dans votre destination préférée.">
{% endblock %}
<h2>Réserver</h2>
{{ form_start(reservationForm) }}
<div class="form-group">
    {{ form_label(reservationForm.departureDate) }}
    {{ form_widget(reservationForm.departureDate, {'attr': {'class': 'form-control', 'id': 'departure-date'}}) }}
    {{ form_errors(reservationForm.departureDate) }}
</div>

<div class="form-group">
    {{ form_label(reservationForm.returnDate) }}
    {{ form_widget(reservationForm.returnDate, {'attr': {'class': 'form-control', 'id': 'return-date'}}) }}
    <div class="error">
        {{ form_errors(reservationForm.returnDate) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(reservationForm.voyagerNb) }}
    {{ form_widget(reservationForm.voyagerNb, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(reservationForm.voyagerNb) }}
</div>

<button type="submit" class=" -primary">Réserver</button>
{{ form_end(reservationForm) }}


