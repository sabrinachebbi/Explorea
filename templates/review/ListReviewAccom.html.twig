<div class="reviews-section">
    <h2>Avis des voyageurs</h2>

    <ul class="reviews-grid">
        {% for review in reviews %}
            <li>
                <strong>{{ review.reservation.traveler.userProfile.firstName }}</strong>
                <p class="rating">Note : {{ review.note }} / 5</p>
                <p>{{ review.comment }}</p>
                <p><small>Publi√© le {{ review.dateReview|date('d/m/Y') }}</small></p>
            </li>
        {% endfor %}
    </ul>
</div>