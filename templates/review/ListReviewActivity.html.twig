

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/review.css') }}">
{% endblock %}

{% block body %}
    <h1 class="review-title">Avis des voyageurs</h1>

    {# Section pour afficher les avis existants #}
    <div class="reviews-section">
        {% if reviews|length > 0 %}
            <ul class="reviews-grid">
                {% for review in reviews %}
                    <li>
                        <strong>{{ review.reservation.traveler.userProfile.firstName }} :</strong>
                        <p>Note : {{ review.note }} / 5</p>
                        <p>{{ review.comment }}</p>
                        <p><small>Publié le {{ review.dateReview|date('d/m/Y') }}</small></p>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun avis pour cette activité pour le moment.</p>
        {% endif %}
    </div>

